<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="singleFileOpt">
    <test name="fileUpload">
        <classes>
            <class name="com.dcits.ftp.uploadFile">
                <methods>
                    <include name="uploadNotExistNotCover"/>
                    <include name="uploadExistNotCover"/>
                    <include name="uploadNotExistCover"/>
                    <include name="uploadExistCover"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="fileDownLoad">
        <classes>
            <class name="com.dcits.ftp.downloadFile">
                <methods>
                    <include name="downloadNotExistNotCover"/>
                    <include name="downloadExistNotCover"/>
                    <include name="downloadNotExistCover"/>
                    <include name="downloadExistCover"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="fileRename">
        <classes>
            <class name="com.dcits.ftp.renameFile">
                <methods>
                    <include name="renameFileNotExist"/>
                    <include name="renameExist"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="fileRemove">
        <classes>
            <class name="com.dcits.ftp.removeFile">
                <methods>
                    <include name="removeFileNotExist"/>
                    <include name="uploadExistNotCover"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>